---
import { Icon } from "astro-icon/components";

export interface Props {
	size?: number;
}

const { size = 32 } = Astro.props;
---

<div class="flex flex-row items-center justify-center gap-6 p-4">
	<a
		href="https://fosstodon.org/@gruizmudarra"
		target="_blank"
		class="flex no-underline text-current hover:opacity-80 transition-opacity"
	>
		<Icon name="mdi:mastodon" width={size} height={size} />
	</a>
	<a
		href="https://linkedin.com/in/gruizmudarra"
		target="_blank"
		class="flex no-underline text-current hover:opacity-80 transition-opacity"
	>
		<Icon name="mdi:linkedin" width={size} height={size} />
	</a>
	<a
		href="https://github.com/grmnlabs"
		target="_blank"
		class="flex no-underline text-current hover:opacity-80 transition-opacity"
	>
		<Icon name="mdi:github" width={size} height={size} />
	</a>
</div>
